<%- include("partials/header.ejs") %>

<div class="bg">
  <div class="contenttodo">
    <span class="todaytodo"><%= title %></span>

    <div class="addtodo">
      <form class="addtd" action="/add" method="post">
        <input
          type="text"
          name="task"
          class="addtodo1"
          placeholder="Add Todo"
        />
        <button type="submit" name="titleName" value="<%= title %>"><span>Add</span></button>
      </form>

      <div class="list">
        <div class="todolist">
          <% newListItems.forEach(newListItems => {%>
          <form action="/delete" method="post">
            <div class="item">
              <input
                type="checkbox"
                name="todocheck"
                value="<%= newListItems._id %>"
                onChange="this.form.submit()"
              />
              <p id="ls" class=""><%=newListItems.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%= title %>" />
          </form>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
